<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/title_top" 
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@drawable/border_bottom" >
    
	<ImageView 
	    android:id="@+id/btn_back"
	    android:layout_width="20dp"
	    android:layout_height="35dp"
	    android:layout_marginLeft="10dp"
	    android:layout_centerVertical="true"
	    android:src="@drawable/ico_back"/>
	<RelativeLayout 
	    android:id="@+id/lable_title"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="80dp"
	    android:layout_marginRight="80dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/border_btn_corner"
	    android:layout_marginBottom="10dp">
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:orientation="horizontal">
	        <ImageView 
	            android:id="@+id/title_img_1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ico_start_small"
	            android:layout_marginRight="15dp"
	            />
		    <TextView 
		    android:id="@+id/tv_title"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:textColor="@color/color_main"/>
	    </LinearLayout>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/lable_input"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="80dp"
	    android:layout_marginRight="80dp"
	    android:layout_marginTop="10dp"
	    android:visibility="gone"
	    android:background="@drawable/border_btn_corner"
	    android:layout_marginBottom="10dp">
	        <ImageView 
	            android:id="@+id/title_img_2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ico_start_small"
	            android:layout_marginRight="15dp"
	            />
		    <com.shengping.paomanager.view.ClearEditText
		        android:id="@+id/edit_address"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/title_img_2"
		        android:hint="货在.."
		        android:background="@null"
		        android:textColor="@color/color_main"
		        android:textColorHint="@color/color_main"/>
	    
	</RelativeLayout>
</RelativeLayout>
<FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
    <com.baidu.mapapi.map.MapView  
    android:id="@+id/bmapView"  
    android:layout_width="match_parent"  
    android:layout_height="300dp"  
    android:clickable="true" />
    <ListView 
        android:id="@+id/mylist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/activity_bg"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
        android:dividerHeight="1dp">
        
    </ListView>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/lable_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@color/white" >
    <ListView 
        android:id="@+id/mylist_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:dividerHeight="1dp"
        android:divider="@color/activity_bg"></ListView>
	</LinearLayout>
    </FrameLayout>
</LinearLayout>
