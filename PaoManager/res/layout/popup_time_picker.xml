<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg" >
<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="18sp"
            android:textColor="#4a8ff8"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="选择器"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:text="确定"
            android:textSize="18sp"
            android:textColor="@color/color_main"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:text="上午营业："/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
   <com.shengping.paomanager.view.WheelView
            android:id="@+id/hour_start_am"
            android:layout_height="300dp"
            android:layout_width="100dp"
            />
   <TextView
       android:id="@+id/tv_lable" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:textStyle="bold"
       android:textSize="18sp"
       android:text=":"
       android:textColor="@color/text_black"/>
   <com.shengping.paomanager.view.WheelView
            android:id="@+id/minute_start_am"
            android:layout_height="300dp"
            android:layout_width="100dp"
            />
   <TextView 
       android:id="@+id/tv_text" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:textStyle="bold"
       android:textSize="18sp"
       android:text="至"
       android:textColor="@color/text_black"/>
   <com.shengping.paomanager.view.WheelView
            android:id="@+id/hour_end_am"
            android:layout_height="300dp"
            android:layout_width="100dp"
            />
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:textStyle="bold"
       android:textSize="18sp"
       android:text=":"
       android:textColor="@color/text_black"/>
   <com.shengping.paomanager.view.WheelView
            android:id="@+id/minute_end_am"
            android:layout_height="300dp"
            android:layout_width="100dp"
            />
	</LinearLayout>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:text="下午营业："/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
   <com.shengping.paomanager.view.WheelView
            android:id="@+id/hour_start_pm"
            android:layout_height="300dp"
            android:layout_width="100dp"
            />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:textStyle="bold"
       android:textSize="18sp"
       android:text=":"
       android:textColor="@color/text_black"/>
   <com.shengping.paomanager.view.WheelView
            android:id="@+id/minute_start_pm"
            android:layout_height="300dp"
            android:layout_width="100dp"
            />
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:textStyle="bold"
       android:textSize="18sp"
       android:text="至"
       android:textColor="@color/text_black"/>
   <com.shengping.paomanager.view.WheelView
            android:id="@+id/hour_end_pm"
            android:layout_height="300dp"
            android:layout_width="100dp"
            />
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:textStyle="bold"
       android:textSize="18sp"
       android:text=":"
       android:textColor="@color/text_black"/>
   <com.shengping.paomanager.view.WheelView
            android:id="@+id/minute_end_pm"
            android:layout_height="300dp"
            android:layout_width="100dp"
            />
	</LinearLayout>
</LinearLayout>